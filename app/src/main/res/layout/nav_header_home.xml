<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="#00000000"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="0dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <RelativeLayout
        android:id="@+id/ll_1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:text="Roam Agent"
            android:fontFamily="@font/lato_light"
            android:textColor="@color/white"
            android:textSize="22sp" />

<!--        android:textColor="@color/underline_color"-->

        <RelativeLayout
            android:id="@+id/rl_main"
            android:layout_below="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_logo"
                android:layout_marginStart="0dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_logout"
                android:layout_marginLeft="0dp" />

            <TextView
                android:enabled="false"
                android:id="@+id/tv_logout"
                android:layout_toRightOf="@+id/im_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:text="LogOut"
                android:textSize="14sp"
                android:fontFamily="@font/lato_light"
                android:textColor="@color/dark_gray"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_main1"
            android:layout_below="@+id/rl_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_logo1"
                android:layout_marginStart="0dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_refresh"
                android:layout_marginLeft="0dp" />

            <TextView
                android:id="@+id/tv_sync"
                android:layout_toRightOf="@+id/im_logo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:text="Sync"
                android:textSize="14sp"
                android:fontFamily="@font/lato_light"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                android:enabled="false" />

        </RelativeLayout>


        <TextView
            android:layout_below="@+id/rl_main1"
            android:id="@+id/tv_syncStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="10dp"
            android:padding="0dp"
            android:text=""
            android:fontFamily="@font/lato_light"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginTop="12sp"
            android:layout_below="@+id/tv_syncStatus"
            android:id="@+id/tv_synctiime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:layout_marginEnd="10dp"
            android:padding="0dp"
            android:text=""
            android:fontFamily="@font/lato_light"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/rl_setting"
            android:layout_below="@+id/tv_synctiime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im_setting"
                android:layout_marginStart="0dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_settings"
                android:layout_marginLeft="0dp" />

            <TextView
                android:enabled="false"
                android:id="@+id/tv_setting"
                android:layout_toRightOf="@+id/im_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                android:text="Setting"
                android:textSize="14sp"
                android:fontFamily="@font/lato_light"
                android:textColor="@color/dark_gray"
                android:textStyle="bold" />

        </RelativeLayout>
