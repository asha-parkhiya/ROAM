<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 设置背景色图像资源 -->
  <!-- <item
        android:id="@android:id/background"
        android:drawable="@drawable/common_progress_dialog_progressbar3"/>-->
    <item android:id="@android:id/background" >
    <shape android:shape="rectangle">
        <corners android:radius="25dp"></corners>
        <gradient android:startColor="#ddd" android:centerColor="#ddd" android:endColor="#ddd"
            android:type="linear" android:angle="270" android:centerY="0.6" ></gradient>
    </shape>
</item>

    <!-- 设置进度条颜色图像资源 -->
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="horizontal"
            android:drawable="@drawable/ic_progress"
            android:gravity="left" >
        </clip>
    </item>

</layer-list>